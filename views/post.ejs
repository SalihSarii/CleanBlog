<%-  include('partial/_header') -%>

<body>

 
  <%-  include('partial/_navigation') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= post.title%></h1>
            <h2 class="subheading"> </h2>
            <span class="meta">Posted by
              <a href="#">Salih SARITEPE</a>
              <%= post.dateCreated%></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          
          <h2 class="section-heading"><%= post.title%></h2>
          <a href="#">
            <img class="img-fluid" src="/img/post-sample-image.jpg" alt="">
          </a>
         
          <p>Placeholder text by
            <a href="http://spaceipsum.com/">Space Ipsum</a>. Photographs by
            <a href="https://www.flickr.com/photos/nasacommons/">NASA on The Commons</a>.</p>

            <p><%= post.detail%></p>
        </div>
      </div>
    </div>
  </article>
  <div class="col-xl-4 col-lg-5">
    <!-- Share box -->
    <div class="tm-bg-gray tm-share-box">
      <div class="text-center">
        <% console.log(post)%>
        <a href="/posts/edit/<%= post._id %>" class="btn btn-primary p-0 mb-4 tm-btn-animate tm-btn-download tm-icon-download"><span>Update Details</span></a>	
      </div>	
      <div class="text-center">
        <a href="/posts/<%= post._id%>?_method=DELETE" class="btn btn-danger p-0 tm-btn-animate tm-btn-download tm-icon-download" onclick="return confirm('Silmek Istediginize emin misiniz?')"><span>Delete Post</span></a>	
      </div>								
    </div>
  </div>
  <hr>

  <%-  include('partial/_footer') -%>

  <!-- Custom scripts for this template -->
  <script src="/js/clean-blog.min.js"></script>

</body>

</html>
